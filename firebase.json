{
  "functions": {
    "source": "backend/functions",
    "runtime": "nodejs20",
    "region": "asia-northeast3"
  },
  "firestore": {
    "rules": "setup/scripts/firestore.rules",
    "indexes": "setup/scripts/firestore.indexes.json"
  },
  "auth": {
    "data": "setup/scripts/users.json"
  },
  "hosting": {
    "public": "public",
    "ignore": ["firebase.json", "**/.*", "**/node_modules/**"],
    "rewrites": [
      {
        "source": "**",
        "destination": "/index.html"
      }
    ]
  },
  "storage": {
    "rules": "setup/scripts/storage.rules",
    "bucket": "senior-mhealth-lee.appspot.com"
  },
  "emulators": {
    "auth": {
      "port": 9099
    },
    "firestore": {
      "port": 8080
    },
    "hosting": {
      "port": 5000
    },
    "storage": {
      "port": 9199
    },
    "ui": {
      "enabled": true,
      "port": 4000
    },
    "singleProjectMode": true
  }
}
