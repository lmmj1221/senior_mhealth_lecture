{
  "functions": {
    "source": "backend/functions",
    "runtime": "nodejs20",
    "region": "asia-northeast3"
  },
  "firestore": {
    "rules": "backend/functions/firestore.rules",
    "indexes": "backend/functions/firestore.indexes.json"
  },
  "auth": {
    "data": "setup/scripts/users.json"
  },
  "hosting": {
    "public": "public",
    "ignore": ["firebase.json", "**/.*", "**/node_modules/**"],
    "rewrites": [
      {
        "source": "**",
        "destination": "/index.html"
      }
    ]
  },
  "storage": {
    "rules": "backend/functions/storage.rules",
    "bucket": "credible-runner-474101-f6.firebasestorage.app"
  },
  "emulators": {
    "auth": {
      "port": 9099
    },
    "firestore": {
      "port": 8080
    },
    "hosting": {
      "port": 5000
    },
    "storage": {
      "port": 9199
    },
    "ui": {
      "enabled": true,
      "port": 4000
    },
    "singleProjectMode": true
  }
}
