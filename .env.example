# ====================================
# Project Configuration Template
# Copy this file to .env and fill in your values
# ====================================

# === GCP Project Configuration ===
GCP_PROJECT_ID=your-project-id
GCP_PROJECT_NUMBER=your-project-number
GCP_REGION=asia-northeast3

# === Firebase Configuration ===
FIREBASE_API_KEY=your-firebase-api-key-here
FIREBASE_AUTH_DOMAIN=your-project-id.firebaseapp.com
FIREBASE_PROJECT_ID=your-project-id
FIREBASE_STORAGE_BUCKET=your-project-id.firebasestorage.app
FIREBASE_MESSAGING_SENDER_ID=your-messaging-sender-id
FIREBASE_APP_ID=your-firebase-app-id
FIREBASE_MEASUREMENT_ID=your-measurement-id
FIREBASE_VAPID_KEY=your-vapid-key

# === Database Configuration ===
# Cloud SQL
CLOUD_SQL_HOST=/cloudsql/${GCP_PROJECT_ID}:${GCP_REGION}:${GCP_PROJECT_ID}-db
CLOUD_SQL_USER=root
CLOUD_SQL_PASSWORD=your-database-password
CLOUD_SQL_DATABASE=your_database_name

# BigQuery
BIGQUERY_DATASET=your_analytics_dataset
BIGQUERY_LOCATION=${GCP_REGION}

# === Service URLs ===
# These will be generated after deployment
CLOUD_RUN_AI_URL=https://your-ai-service.a.run.app
CLOUD_RUN_API_URL=https://your-api-service.run.app
WEB_APP_URL=https://your-app.vercel.app

# === Storage ===
STORAGE_BUCKET=your-storage-bucket.firebasestorage.app

# === API Keys ===
OPENAI_API_KEY=your-openai-api-key
GEMINI_API_KEY=your-gemini-api-key
ANTHROPIC_API_KEY=your-anthropic-api-key

# === Authentication ===
NEXTAUTH_URL=http://localhost:3000
NEXTAUTH_SECRET=your-nextauth-secret-change-in-production
JWT_SECRET=your-jwt-secret-change-in-production

# === Deployment Configuration ===
VERCEL_ORG_ID=your-vercel-org-id
VERCEL_PROJECT_ID=your-vercel-project-id
GITHUB_OWNER=your-github-username
GITHUB_REPO=Senior_MHealth

# === Environment ===
NODE_ENV=production
ENVIRONMENT=production
DEBUG_MODE=false