{
  "name": "senior-mhealth",
  "version": "1.0.0",
  "description": "Senior Mental Health Monitoring System - AI-powered voice analysis for elderly care",
  "main": "index.js",
  "scripts": {
    "dev": "concurrently \"npm run dev:web\" \"npm run dev:backend\"",
    "dev:web": "cd frontend/web && npm run dev",
    "dev:backend": "cd backend/functions && npm run dev",
    "dev:mobile": "cd frontend/mobile && flutter run",
    "build": "npm run build:web && npm run build:backend",
    "build:web": "cd frontend/web && npm run build",
    "build:backend": "cd backend/functions && npm run build",
    "test": "npm run test:backend",
    "test:backend": "cd backend/functions && npm test",
    "lint": "npm run lint:backend",
    "lint:backend": "cd backend/functions && npm run lint",
    "format": "prettier --write \"**/*.{js,jsx,ts,tsx,json,md}\"",
    "setup": "node scripts/setup-cross-platform.js",
    "setup:firebase": "firebase emulators:start --only firestore",
    "deploy:dev": "npm run build && cd backend/functions && firebase deploy --only functions --project dev",
    "deploy:prod": "npm run build && cd backend/functions && firebase deploy --only functions --project prod",
    "logs:dev": "cd backend/functions && firebase functions:log --project=dev",
    "logs:prod": "cd backend/functions && firebase functions:log --project=prod",
    "clean": "npm run clean:modules",
    "clean:modules": "rimraf node_modules frontend/web/node_modules backend/functions/node_modules",
    "install:all": "npm install && (cd frontend/web && npm install) && (cd backend/functions && npm install)",
    "emulator": "firebase emulators:start",
    "emulator:auth": "firebase emulators:start --only auth",
    "emulator:firestore": "firebase emulators:start --only firestore",
    "emulator:functions": "firebase emulators:start --only functions",
    "emulator:storage": "firebase emulators:start --only storage",
    "emulator:all": "firebase emulators:start",
    "emulator:export": "firebase emulators:export ./emulator-data",
    "emulator:import": "firebase emulators:start --import=./emulator-data",
    "emulator:data": "firebase emulators:start --import=./emulator-data --export-on-exit",
    "seed": "node scripts/seed-emulator.js"
  },
  "keywords": [
    "senior-health",
    "mental-health",
    "ai",
    "voice-analysis",
    "elderly-care",
    "firebase",
    "react-native",
    "nextjs",
    "mysql",
    "cloud-sql"
  ],
  "author": "Senior_MHealth Team",
  "license": "MIT",
  "devDependencies": {
    "@types/node": "^20.0.0",
    "concurrently": "^8.0.0",
    "eslint": "^9.35.0",
    "eslint-config-prettier": "^10.1.8",
    "jest": "^29.0.0",
    "prettier": "^3.6.2",
    "typescript": "^5.0.0"
  },
  "engines": {
    "node": "20.x",
    "npm": ">=10.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/your-username/Senior_MHealth.git"
  },
  "bugs": {
    "url": "https://github.com/your-username/Senior_MHealth/issues"
  },
  "homepage": "https://github.com/your-username/Senior_MHealth#readme",
  "dependencies": {
    "firebase-admin": "^13.5.0",
    "form-data": "^4.0.4",
    "node-fetch": "^2.7.0"
  }
}
